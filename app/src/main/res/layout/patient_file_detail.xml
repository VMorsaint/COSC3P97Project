<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="108dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name:"
            android:layout_marginLeft="16dp"
            android:id="@+id/textViewPatientFileNameLabel"
            android:gravity="center_vertical"/>

        <TextView android:id="@+id/textViewPatientFileNameEdit"
                  style="?android:attr/textAppearanceLarge"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="fill_parent"
                  android:textIsSelectable="true"
                  tools:context=".PatientClasses.PatientDetailActivity"
                  android:text=""
                  android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="108dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start:"
            android:id="@+id/textViewPatientFileStartLabel"
            android:gravity="center_vertical"/>

        <TextView
            style="?android:attr/textAppearanceLarge"
            tools:context=".PatientClasses.OldClasses.PatientDetailFragment"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/textViewPatientFileStartEdit"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textIsSelectable="true"
            android:text=""
            android:gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notes:"
        android:id="@+id/textViewPatientFileNotesLabel"
        android:gravity="center_vertical"/>

    <android.support.v7.widget.RecyclerView android:id="@+id/listView_patientFile_items"
                                                    android:name="com.ben.cosc3p97project.FragmentPatientFileList"
                                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                                    xmlns:tools="http://schemas.android.com/tools"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_marginLeft="16dp"
                                                    android:layout_marginRight="16dp"
                                                    android:choiceMode="singleChoice"
                                                    app:layoutManager="LinearLayoutManager"
                                                    tools:context=".PatientClasses.OldClasses.PatientDetailFragment"
                                                    tools:listitem="@layout/patient_notes_list_content"
                                                    android:visibility="visible"/>


</LinearLayout>